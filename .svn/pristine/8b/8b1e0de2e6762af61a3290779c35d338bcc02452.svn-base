div#combobox_overlay { 
/*	required	*/	
	position: fixed;
	z-index: 99;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	display: none;
	
/*	layout	*/
}

#combobox_container_location_select {
    z-index: 103;
    /*margin-top: -10px;*/
}

#location_label {
    position: absolute;
    padding-bottom: 10px;
    margin-top: -7px;
}

div.combobox_container {
/*	required	*/
	position: absolute;
/*	layout	*/
}
input.combobox_input {
/*	layout	*/	
	width: 146px;
	height: 18px;
	padding: 0 0 0 4px;
	border: 1px solid #ccc;
	position: absolute;
}
a.combobox_button {
/*	layout	*/
	display: block;
	height: 18px;
    width: 17px;
	position: absolute;
	margin: 0 0 0 152px;
	padding: 0px;
	border: 1px solid #ccc;
	border-left: 0;
	text-decoration: none;
    background: url('/images/select_button.jpg');
}
ul.combobox_summary {
/*	required	*/	
	overflow-x: hidden;
	overflow-y: auto;

/*	layout	*/
	width: 146px;
	background-color: white;
	border: 1px solid #ccc;
	border-top: 0;
	margin: 20px 0 0 0;
	padding: 2px;
	list-style: none;
	display: block;
}
ul.combobox_summary li {
/*	layout	*/	
	width: 144px;
	display: block;
	margin: 0;
	padding: 0;
}
ul.combobox_summary li a {
/*	layout	*/	
	width: 143px;
	padding: 4px 0 4px 3px;
	margin: 0;
	display: block;
	text-decoration: none;
}
ul.combobox_summary li a:hover {
	background-color: #eeeeee;
	text-decoration: none;
}
/*	required when using several comboboxes below each other	*/
#combobox_container_foo1 { z-index: 103; }
#combobox_container_foo2 { z-index: 102; }
#combobox_container_foo3 { z-index: 101; }